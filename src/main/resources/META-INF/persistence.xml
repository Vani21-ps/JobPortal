<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="jobportal-unit" transaction-type="RESOURCE_LOCAL">
    <class>com.jobportal.cli.model.User</class>
    <class>com.jobportal.cli.model.Job</class>
    <class>com.jobportal.cli.model.Application</class>

    <properties>
      <!-- Database Connection -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/job_portal"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="Vanijain@1982"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <!-- Hibernate Properties -->
      <!-- MySQLDialect is the recommended one (instead of deprecated MySQL8Dialect) -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>


      <!-- Auto schema update (good for dev, disable in production) -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <!-- Logging -->
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
